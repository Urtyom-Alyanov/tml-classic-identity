<button class="rounded-lg hover:shadow hover:bg-[#f1f4f9] @(IsCurrentPage ? "text-[#5c1fb8]" : "text-black") flex gap-1 hover:gap-1.5 items-center duration-150 py-2 px-4 text-left">
    @Icon
    <div class="mb-1">@Text</div>
</button>

@code {
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public bool IsCurrentPage { get; set; }

    [Parameter]
    public RenderFragment Icon { get; set; }
}
