    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>410f1223-6415-4151-bf89-811f8b4f96ad</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
